<script>
  document.querySelectorAll('.rv-faq-question').forEach(function(btn) {
    btn.addEventListener('click', function() {
      var item = this.closest('.rv-faq-item');
      var isOpen = item.classList.contains('open');
      // Close all
      document.querySelectorAll('.rv-faq-item.open').forEach(function(el) {
        el.classList.remove('open');
      });
      // Open clicked if it was closed
      if (!isOpen) item.classList.add('open');
    });
  });
</script>

