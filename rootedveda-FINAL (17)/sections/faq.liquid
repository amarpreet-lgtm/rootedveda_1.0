<style>
  .rv-faq {
    padding: 100px 20px;
    background: #FAF7F3;
    min-height: 80vh;
  }

  .rv-faq-container {
    max-width: 860px;
    margin: 0 auto;
  }

  .rv-faq-eyebrow {
    font-family: 'Jost', sans-serif;
    font-size: 0.7rem;
    font-weight: 500;
    color: #C8813A;
    letter-spacing: 4px;
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 16px;
  }

  .rv-faq-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 3.2rem;
    font-weight: 400;
    color: #2C1F14;
    text-align: center;
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .rv-faq-subtitle {
    font-family: 'Jost', sans-serif;
    font-size: 0.9rem;
    font-weight: 300;
    color: #8C7060;
    text-align: center;
    margin-bottom: 70px;
    line-height: 1.8;
  }

  .rv-faq-category {
    margin-bottom: 56px;
  }

  .rv-faq-category-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #2C1F14;
    letter-spacing: 1px;
    margin-bottom: 20px;
    padding-bottom: 12px;
    border-bottom: 1px solid rgba(200,129,58,0.25);
  }

  .rv-faq-item {
    border-bottom: 1px solid rgba(180,150,120,0.15);
    overflow: hidden;
  }

  .rv-faq-question {
    width: 100%;
    background: none;
    border: none;
    padding: 22px 0;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    cursor: pointer;
    text-align: left;
    gap: 20px;
  }

  .rv-faq-question-text {
    font-family: 'Jost', sans-serif;
    font-size: 0.95rem;
    font-weight: 500;
    color: #2C1F14;
    line-height: 1.6;
    flex: 1;
  }

  .rv-faq-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    position: relative;
    margin-top: 2px;
  }

  .rv-faq-icon::before,
  .rv-faq-icon::after {
    content: '';
    position: absolute;
    background: #C8813A;
    border-radius: 2px;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .rv-faq-icon::before {
    width: 14px;
    height: 1.5px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .rv-faq-icon::after {
    width: 1.5px;
    height: 14px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .rv-faq-item.open .rv-faq-icon::after {
    transform: translate(-50%, -50%) rotate(90deg);
    opacity: 0;
  }

  .rv-faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease, padding 0.3s ease;
  }

  .rv-faq-item.open .rv-faq-answer {
    max-height: 2000px;
  }

  .rv-faq-answer-inner {
    padding: 0 0 24px 0;
    font-family: 'Jost', sans-serif;
    font-size: 0.88rem;
    font-weight: 300;
    color: #5C4535;
    line-height: 1.95;
  }

  .rv-faq-answer-inner p {
    margin-bottom: 14px;
  }

  .rv-faq-answer-inner p:last-child {
    margin-bottom: 0;
  }

  .rv-faq-answer-inner strong {
    color: #2C1F14;
    font-weight: 500;
  }

  .rv-faq-answer-inner em {
    color: #C8813A;
    font-style: italic;
  }

  .rv-faq-answer-inner ul, 
  .rv-faq-answer-inner ol {
    padding-left: 20px;
    margin-bottom: 14px;
  }

  .rv-faq-answer-inner li {
    margin-bottom: 8px;
  }

  .rv-faq-answer-inner .ingredient-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 14px;
    margin: 16px 0;
  }

  .rv-faq-answer-inner .ingredient-card {
    background: #ffffff;
    border: 1px solid rgba(200,129,58,0.2);
    border-radius: 6px;
    padding: 14px 16px;
  }

  .rv-faq-answer-inner .ingredient-card strong {
    display: block;
    color: #C8813A;
    font-size: 0.82rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-bottom: 4px;
  }

  .rv-faq-answer-inner .step-block {
    background: #ffffff;
    border-left: 3px solid #C8813A;
    padding: 14px 18px;
    margin: 10px 0;
    border-radius: 0 4px 4px 0;
  }

  .rv-faq-answer-inner .step-block strong {
    display: block;
    margin-bottom: 4px;
    color: #2C1F14;
  }

  .rv-faq-answer-inner .dosha-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
    margin: 14px 0;
  }

  .rv-faq-answer-inner .dosha-card {
    background: #ffffff;
    border: 1px solid rgba(200,129,58,0.18);
    border-radius: 6px;
    padding: 12px 14px;
    font-size: 0.82rem;
  }

  .rv-faq-answer-inner .dosha-card strong {
    display: block;
    color: #C8813A;
    margin-bottom: 4px;
    font-size: 0.78rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  @media (max-width: 600px) {
    .rv-faq-title { font-size: 2.2rem; }
    .rv-faq-answer-inner .ingredient-grid { grid-template-columns: 1fr; }
    .rv-faq-answer-inner .dosha-grid { grid-template-columns: 1fr; }
