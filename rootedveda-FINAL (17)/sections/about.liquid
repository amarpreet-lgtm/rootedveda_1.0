<style>
  .about-section {
    padding: 140px 20px;
    background: #FAF7F3;
    width: 100%;
    margin: 0 !important;
    left: 0;
    right: 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 100px;
  }

  .section-subtitle {
    font-family: 'Jost', sans-serif;
    font-size: 0.85rem;
    font-weight: 500;
    color: #C8813A;
    letter-spacing: 3px;
    text-transform: uppercase;
    margin-bottom: 20px;
  }

  .section-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 3.5rem;
    font-weight: 400;
    color: #2C1F14;
    margin-bottom: 30px;
    line-height: 1.3;
  }

  .section-description {
    font-size: 1.1rem;
    font-weight: 300;
    color: #666;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.9;
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }
  }
</style>

<section class="about-section" id="about">
  <div class="container">
    <div class="section-header">
      <p class="section-subtitle">{{ section.settings.subtitle }}</p>
      <h2 class="section-title">{{ section.settings.title }}</h2>
      <p class="section-description">
        {{ section.settings.description | newline_to_br }}
      </p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Section",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Our Philosophy"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The Art of Balance"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "We honor the sacred science of Ayurveda, crafting premium formulations that restore harmony to mind, body, and spirit through nature's purest offerings."
    }
  ],
  "presets": [
    {
      "name": "About"
    }
  ]
}
{% endschema %}
