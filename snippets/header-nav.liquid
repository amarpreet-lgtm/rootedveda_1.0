<style>
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;1,300;1,400&family=Jost:wght@200;300;400;500&display=swap');

  .rv-announce {
    background: #F2EBE1;
    color: #8C7060;
    text-align: center;
    padding: 9px 20px;
    font-family: 'Jost', sans-serif;
    font-size: 0.65rem;
    font-weight: 300;
    letter-spacing: 3.5px;
    text-transform: uppercase;
    border-bottom: 1px solid rgba(180,150,120,0.15);
  }

  .rv-header {
    position: sticky;
    top: 0;
    z-index: 900;
    background: #ffffff !important;
    border-bottom: 1px solid rgba(180,150,120,0.18);
    transition: box-shadow 0.3s;
  }

  .rv-header.scrolled {
    box-shadow: 0 2px 24px rgba(140,112,96,0.08);
  }

  .rv-header-inner {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 50px;
    height: 68px;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
  }

  .rv-nav-left {
    display: flex;
    align-items: center;
    gap: 34px;
    list-style: none;
    margin: 0; padding: 0;
  }

  .rv-header-logo {
    text-align: center;
    text-decoration: none;
    display: block;
    color: #1A0F08 !important;
  }

  .rv-header-logo-text {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.4rem;
    font-weight: 700;
    color: #1A0F08 !important;
    letter-spacing: 7px;
    text-transform: uppercase;
    display: block;
    -webkit-text-stroke: 0.3px #1A0F08;
  }

  .rv-nav-right {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 28px;
    list-style: none;
    margin: 0; padding: 0;
  }

  .rv-nav-left a,
  .rv-nav-right a {
    font-family: 'Jost', sans-serif;
    font-size: 0.65rem;
    font-weight: 400;
    color: #5C4535;
    text-decoration: none;
    letter-spacing: 2.5px;
    text-transform: uppercase;
    transition: color 0.2s;
    position: relative;
    padding-bottom: 3px;
  }

  .rv-nav-left a::after,
  .rv-nav-right a::after {
    content: '';
    position: absolute;
    bottom: 0; left: 0;
    width: 0; height: 1px;
    background: #C8813A;
    transition: width 0.3s ease;
  }

  .rv-nav-left a:hover,
  .rv-nav-right a:hover { color: #1A0F08; }

  .rv-nav-left a:hover::after,
  .rv-nav-right a:hover::after { width: 100%; }

  .rv-cart-link {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: 'Jost', sans-serif;
    font-size: 0.65rem;
    font-weight: 400;
    color: #5C4535;
    text-decoration: none;
    letter-spacing: 2px;
    text-transform: uppercase;
    transition: color 0.2s;
  }

  .rv-cart-link:hover { color: #2C1F14; }

  .rv-hamburger {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
  }

  .rv-hamburger span {
    display: block;
    width: 22px; height: 1px;
    background: #2C1F14;
    transition: all 0.3s;
  }

  .rv-hamburger.open span:nth-child(1) { transform: translateY(6px) rotate(45deg); }
  .rv-hamburger.open span:nth-child(2) { opacity: 0; }
  .rv-hamburger.open span:nth-child(3) { transform: translateY(-6px) rotate(-45deg); }

  .rv-mobile-menu {
    display: none;
    background: #ffffff;
    border-top: 1px solid rgba(180,150,120,0.15);
    padding: 28px 40px 36px;
    flex-direction: column;
  }

  .rv-mobile-menu.open { display: flex; }

  .rv-mobile-menu a {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.6rem;
    font-weight: 300;
    font-style: italic;
    color: #2C1F14;
    text-decoration: none;
    padding: 14px 0;
    border-bottom: 1px solid rgba(180,150,120,0.12);
    transition: color 0.2s;
  }

  .rv-mobile-menu a:hover { color: #C8813A; }

  @media (max-width: 860px) {
    .rv-nav-left, .rv-nav-right { display: none; }
    .rv-header-inner { grid-template-columns: auto 1fr auto; padding: 0 20px; }
    .rv-header-logo { text-align: left; }
    .rv-hamburger { display: flex; }
  }
</style>

<div class="rv-announce">
  Free shipping on orders over $45 &nbsp;·&nbsp; Organic &nbsp;·&nbsp; Plastic-Free &nbsp;·&nbsp; Hormone-Safe
</div>

<header class="rv-header" id="rv-header">
  <div class="rv-header-inner">
    <ul class="rv-nav-left">
      <li><a href="/">Home</a></li>
      <li><a href="/collections/all">Shop</a></li>
      <li><a href="/pages/our-commitment">Our Commitment</a></li>
    </ul>

    <a href="{{ routes.root_url }}" class="rv-header-logo">
      <span class="rv-header-logo-text">{{ shop.name }}</span>
    </a>

    <ul class="rv-nav-right">
      <li><a href="/collections/all">Best Sellers</a></li>
      <li>
        <a href="{{ routes.cart_url }}" class="rv-cart-link">
          <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 01-8 0"/></svg>
          Cart
        </a>
      </li>
    </ul>

    <button class="rv-hamburger" id="rv-hamburger" aria-label="Menu">
      <span></span><span></span><span></span>
    </button>
  </div>
</header>

<div class="rv-mobile-menu" id="rv-mobile-menu">
  <a href="/">Home</a>
  <a href="/collections/all">Shop</a>
  <a href="/pages/our-commitment">Our Commitment</a>
  <a href="/pages/our-story">Our Story</a>
  <a href="{{ routes.cart_url }}">Cart</a>
</div>

<script>
  const rvHeader = document.getElementById('rv-header');
  window.addEventListener('scroll', () => {
    rvHeader.classList.toggle('scrolled', window.scrollY > 10);
  });
  const rvBurger = document.getElementById('rv-hamburger');
  const rvMob = document.getElementById('rv-mobile-menu');
  rvBurger.addEventListener('click', () => {
    rvBurger.classList.toggle('open');
    rvMob.classList.toggle('open');
  });
</script>
