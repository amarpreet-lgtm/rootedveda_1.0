<style>
  .rv-testimonial {
    padding: 120px 40px;
    background: var(--cream, #F7F2EA);
    position: relative;
    overflow: hidden;
  }

  /* Decorative side bar */
  .rv-testimonial::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(to bottom, transparent, var(--brass, #D4A853), transparent);
  }

  .rv-testimonial-inner {
    max-width: 900px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 80px 1fr;
    gap: 50px;
    align-items: start;
  }

  .rv-testimonial-mark {
    font-family: 'Playfair Display', serif;
    font-size: 8rem;
    line-height: 0.7;
    color: var(--brass, #D4A853);
    opacity: 0.3;
    user-select: none;
    padding-top: 10px;
  }

  .rv-testimonial-content {}

  .rv-testimonial-text {
    font-family: 'Playfair Display', serif;
    font-size: clamp(1.3rem, 2.5vw, 1.9rem);
    font-weight: 400;
    font-style: italic;
    color: var(--walnut, #1E1610);
    line-height: 1.75;
    margin-bottom: 35px;
  }

  .rv-testimonial-byline {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .rv-testimonial-byline::before {
    content: '';
    display: block;
    width: 24px;
    height: 1px;
    background: var(--brass, #D4A853);
  }

  .rv-testimonial-author {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.72rem;
    font-weight: 400;
    color: var(--teal, #7A9E8E);
    letter-spacing: 3px;
    text-transform: uppercase;
  }

  /* Star rating */
  .rv-testimonial-stars {
    display: flex;
    gap: 3px;
    margin-bottom: 20px;
  }

  .rv-testimonial-star {
    color: var(--brass, #D4A853);
    font-size: 0.85rem;
  }

  @media (max-width: 600px) {
    .rv-testimonial-inner {
      grid-template-columns: 1fr;
    }
    .rv-testimonial-mark {
      display: none;
    }
  }
</style>

<section class="rv-testimonial">
  <div class="rv-testimonial-inner">
    <div class="rv-testimonial-mark">"</div>
    <div class="rv-testimonial-content">
      <div class="rv-testimonial-stars">
        <span class="rv-testimonial-star">★</span>
        <span class="rv-testimonial-star">★</span>
        <span class="rv-testimonial-star">★</span>
        <span class="rv-testimonial-star">★</span>
        <span class="rv-testimonial-star">★</span>
      </div>
      <p class="rv-testimonial-text">{{ section.settings.testimonial_text }}</p>
      <div class="rv-testimonial-byline">
        <span class="rv-testimonial-author">{{ section.settings.author_name }}{% if section.settings.author_title != blank %} · {{ section.settings.author_title }}{% endif %}</span>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonial",
  "settings": [
    {
      "type": "textarea",
      "id": "testimonial_text",
      "label": "Testimonial Text",
      "default": "Pure magic. It has softened my fine lines and made my skin feel more supple than creams twice the price. My skin just looks healthier and I constantly get compliments now. I'll never be without it!"
    },
    {
      "type": "text",
      "id": "author_name",
      "label": "Author Name",
      "default": "Sarah Mansoor"
    },
    {
      "type": "text",
      "id": "author_title",
      "label": "Author Title",
      "default": "Nurse Practitioner"
    }
  ],
  "presets": [{ "name": "Testimonial" }]
}
{% endschema %}
