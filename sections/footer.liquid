<style>
  .footer {
    padding: 80px 20px 40px;
    background: #1a1614;
    text-align: center;
    width: 100%;
    margin: 0 !important;
    left: 0;
    right: 0;
  }

  .footer-logo {
    width: 90px;
    height: 90px;
    margin: 0 auto 40px;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .footer-logo:hover {
    opacity: 1;
  }

  .footer-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .footer-text {
    font-size: 0.95rem;
    font-weight: 300;
    color: #999;
    max-width: 600px;
    margin: 0 auto 40px;
    line-height: 1.9;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 25px;
    margin-bottom: 50px;
  }

  .social-link {
    width: 45px;
    height: 45px;
    border: 1px solid #333;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    text-decoration: none;
    font-size: 1.1rem;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    border-color: #C9A56A;
    color: #C9A56A;
    transform: translateY(-3px);
  }

  .footer-copyright {
    font-size: 0.8rem;
    color: #666;
    letter-spacing: 1px;
    padding-top: 30px;
    border-top: 1px solid #252525;
  }
</style>

<footer class="footer">
  <div class="container">
    {% if section.settings.footer_logo != blank %}
      <div class="footer-logo">
        <img src="{{ section.settings.footer_logo | img_url: '300x300' }}" alt="{{ shop.name }}">
      </div>
    {% endif %}
    
    <p class="footer-text">
      {{ section.settings.footer_text }}
    </p>
    
    <div class="social-links">
      {% if section.settings.email != blank %}
        <a href="mailto:{{ section.settings.email }}" class="social-link" aria-label="Email">‚úâ</a>
      {% endif %}
      {% if section.settings.instagram != blank %}
        <a href="{{ section.settings.instagram }}" class="social-link" aria-label="Instagram" target="_blank">‚óâ</a>
      {% endif %}
      {% if section.settings.facebook != blank %}
        <a href="{{ section.settings.facebook }}" class="social-link" aria-label="Facebook" target="_blank">f</a>
      {% endif %}
      {% if section.settings.twitter != blank %}
        <a href="{{ section.settings.twitter }}" class="social-link" aria-label="Twitter" target="_blank">ùïè</a>
      {% endif %}
    </div>
    
    <p class="footer-copyright">¬© {{ 'now' | date: "%Y" }} {{ shop.name }}. All Rights Reserved.</p>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Rooted in ancient wisdom, cultivating modern wellness. Honor your body's natural intelligence through the timeless science of Ayurveda."
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address"
    },
    {
      "type": "url",
      "id": "instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter",
      "label": "Twitter URL"
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}
